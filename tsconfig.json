{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "bundler",
    "outDir": "./dist",           // <--- folder output
    "rootDir": "./src",           // <--- folder source
    "strict": true,
    "declaration": true,          // <--- generate .d.ts files
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src", "examples", "src/types"],
  "exclude": ["dist", "examples", "node_modules"]
}
